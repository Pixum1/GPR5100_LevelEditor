<Window x:Class="GPR5100_LevelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPR5100_LevelEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200" Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer x:Name="scrollViewer" Grid.Column="0" HorizontalAlignment="Left">
            <WrapPanel x:Name="WrapPanel_Sprites" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" MouseLeftButtonDown="LMBDown_StackSprites"/>
        </ScrollViewer>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0">
                <TextBox x:Name="Txt_TilesheetPath" Width="200" Height="50"/>
                <Button x:Name="Btn_SelectTilesheet" Content="Select Tilesheet" Width="150" Height="50" Click="OnClick_SelectTilesheet"/>
            </WrapPanel>
            <WrapPanel Grid.Row="1">
                <TextBox Text="16" TextAlignment="Center" VerticalContentAlignment="Center" x:Name="Txt_SliceTileWidth" Height="50" Width="50"/>
                <TextBox Text="16" TextAlignment="Center" VerticalContentAlignment="Center" x:Name="Txt_SliceTileHeight" Height="50" Width="50"/>
                <Button Content="Slice Tilesheet" Width="100" Height="50" Click="OnClick_SliceTilesheet"/>
            </WrapPanel>
            <WrapPanel Grid.Row="2">
                <Rectangle x:Name="Rect_SelectedTile" Width="100" Height="100" Fill="AntiqueWhite"/>
                <Button x:Name="Btn_ClearMap" Width="100" Height="100" Content="Clear" Click="OnClick_ClearMap"/>
                <Button x:Name="Btn_SaveMap" Width="100" Height="100"  Content="Save" Click="OnClick_SaveMap"/>
            </WrapPanel>
        </Grid>

        <WrapPanel x:Name="WrapPanel_Map" Width="300" Height="300" Grid.Column="2" Background="Aqua" MouseLeftButtonDown="LMBDown_Map"/>
    </Grid>
</Window>
