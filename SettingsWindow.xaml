<Window x:Class="GPR5100_LevelEditor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPR5100_LevelEditor"
        mc:Ignorable="d"
        Title="SettingsWindow" 
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="#CFCFCF"
            CornerRadius="10">

        <Grid Width="790" Height="440">
            <WrapPanel>

                <TextBox x:Name="Txt_TilesheetPath"
                         Height="50"
                         Width="200"/>
                
                <Button x:Name="Btn_SelectTilesheet"
                        Height="50"
                        Style="{StaticResource ButtonTheme}"
                        Content="SelectTileSheet"
                        Click="OnClick_SelectTilesheet"/>

            </WrapPanel>
        </Grid>
    </Border>

</Window>
